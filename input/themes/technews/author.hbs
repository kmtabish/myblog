{{> head}}
    {{> top}}
    <main class="main">
        <div class="page">
            {{#author}}
                {{#if avatar}}
                    <img src="{{avatar}}" alt="{{name}}" class="u-author__avatar">
                {{/if}}
                <div>
                    <h1 class="page__title box__title">
                        {{name}}
                        <sup>({{postsNumber}})</sup>
                    </h1>
                    {{#if description}}
                        <p>
                            {{description}}</p>
                    {{/if}}
                </div>
            {{/author}}
        </div>
        <div class="cat {{@config.custom.layoutAuthor}}">
            {{#each posts}}
			    {{#if @config.custom.authorAd}}
				    {{#checkIf @config.custom.layoutAuthor '==' "cat--layout-2col" }}
                        {{#checkIf @index '==' 6}}
                            <div class="u-ads cat--layout-2col__2span">
                                <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                                    {{{@config.custom.authorAdCode}}}
                            </div>
                        {{/checkIf}}
                    {{/checkIf}}
		        {{/if}}
                <article class="cat__item">
                    {{#if @config.custom.authorAd}}
				    	{{#checkIf @config.custom.layoutAuthor '==' "cat--layout-1col" }}
                            {{#checkIf @index '==' 5}}
                                <div class="u-ads">
                                    <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                                    {{{@config.custom.authorAdCode}}}
                                </div>
                            {{/checkIf}}
                        {{/checkIf}}
                        {{#checkIf @config.custom.layoutAuthor '==' "cat--layout-2col-1-4" }}
                            {{#checkIf @index '==' 5}}
                                <div class="u-ads">
                                    <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                                    {{{@config.custom.authorAdCode}}}
                                </div>
                            {{/checkIf}}
                        {{/checkIf}}
                        {{#checkIf @config.custom.layoutAuthor '==' "cat--layout-2col-2-1" }}
                            {{#checkIf @index '==' 5}}
                                <div class="u-ads">
                                    <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                                    {{{@config.custom.authorAdCode}}}
                                </div>
                            {{/checkIf}}
                        {{/checkIf}}
                    {{/if}}
                    <div class="cat__item-inner">
                        {{#featuredImage}}
                            {{#if @config.custom.lazyLoad}}
                                <a href="{{../url}}" class="cat__item-image-link" style="padding-bottom: calc({{height}}/{{width}} * 100%)">
                                    <img
                                        class="lazyload cat__item-image"
                                        {{#checkIf @config.custom.lazyLoadEffect '!==' "lqip" }}
                                            src="{{urlXs}}"
                                        {{else}}
                                            data-src="{{url}}"
                                        {{/checkIf}}
                                        data-srcset="{{srcset.listing}}"
                                        data-sizes="auto"
                                        data-expand="300"
                                        alt="{{alt}}">
                                </a>
                            {{else}}
                                <a href="{{../url}}">
                                    <img
                                        class="cat__item-image"
                                        src="{{url}}"
                                        sizes="{{sizes.listing}}"
                                        srcset="{{srcset.listing}}"
                                        alt="{{alt}}">
                                </a>
                            {{/if}}
                        {{/featuredImage}}
                        <header class="u-header">
                            <h2>
                                <a href="{{url}}">
                                    {{title}}
                                </a>
                            </h2>
                            {{#checkIfAny @config.custom.authorAuthorAvatar @config.custom.authorAuthorName @config.custom.authorDate @config.custom.authortTag}}
                                <div class="u-header__meta u-small">
                                    {{#if @config.custom.authorAuthorAvatar}}
                                        {{#author}}
                                           {{#if avatar}}
                                                {{#if @config.custom.lazyLoad}}
                                                    <img class="lazyload u-header__avatar" data-src="{{avatar}}" alt="{{name}}">
                                                {{else}}
                                                    <img src="{{avatar}}" alt="{{name}}" class="u-header__avatar">
                                                {{/if}}
                                            {{/if}}
                                        {{/author}}
                                    {{/if}}
                                    <div>
                                        {{#if @config.custom.authorAuthorName}}
                                            {{#author}}
                                                <a href="{{url}}" title="{{name}}">{{name}}</a>
                                            {{/author}}
                                        {{/if}}

                                        {{#if @config.custom.authorDate}}
                                            <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}">
                                                {{#checkIf @config.custom.formatDate '!=' 'custom'}}
                                                    {{date createdAt @config.custom.formatDate}}
                                                {{else}}
                                                    {{date createdAt @config.custom.formatDateCustom}}
                                                {{/checkIf}}
                                            </time>
                                        {{/if}}
                                    </div>
                                    {{#if @config.custom.authortTag}}
                                        {{#if tags}}
                                            <p>
                                                {{#each tags}}
                                                    {{#if @first}}
                                                        <a href="{{url}}" class="cat__item-tag u-tag {{ getTagColor slug @config.custom.tagColors}}" title="{{name}}">{{name}}</a>
                                                    {{/if}}
                                                {{/each}}
                                            </p>
                                        {{/if}}
                                    {{/if}}
                                </div>
                            {{/checkIfAny}}
                        </header>
                        {{#if @config.custom.authorCommentCount}}                            
                                <footer>
                                    <a href="{{url}}#disqus_thread" data-disqus-identifier="{{id}}" class="u-comment-count" rel="nofollow">0</a>
                                </footer>                           
                        {{/if}}
                    </div>
                    {{#if @config.custom.authorAd}}
                        {{#checkIf @config.custom.layoutAuthor '==' "cat--layout-2col-4-1" }}
                            {{#checkIf @index '==' 4}}
                                <div class="u-ads u-ads--mt">
                                    <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                                    {{{@config.custom.authorAdCode}}}
                                </div>
                            {{/checkIf}}
                        {{/checkIf}}
                        {{#checkIf @config.custom.layoutAuthor '==' "cat--layout-2col-1-2" }}
                            {{#checkIf @index '==' 3}}
                                <div class="u-ads u-ads--mt">
                                    <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                                    {{{@config.custom.authorAdCode}}}
                                </div>
                            {{/checkIf}}
                        {{/checkIf}}
                    {{/if}}
                </article>
            {{/each}}
            {{#if @pagination}}
                <nav class="pagination {{#checkIf @config.custom.layoutAuthor '!=' "cat--layout-1col" }}cat--layout-2col__2span{{/checkIf}}">
				    {{> pagination}}
		        </nav>
            {{/if}}
        </div>
    </main>
    {{> sidebar}}
    {{> footer}}