<div class="container">
    <header>
        <a class="logo" href="{{@website.url}}">
            {{#if @website.logo}}
                <img src="{{@website.logo}}" alt="{{@website.name}}">
            {{else}}
                {{@website.name}}
            {{/if}}
        </a>
        <div class="top">
            {{#if menus.mainMenu}}
                {{> menu menus.mainMenu}}
            {{/if}}
            {{#if @config.custom.search}}
                <div class="top__search">
                    <form action="{{@website.searchUrl}}" class="search">
                        <input
                            type="search"
                            name="{{@config.custom.searchParam}}"
                            placeholder="{{ translate 'search.placeholder' }}"/>
                    </form>
                </div>
            {{/if}}
        </div>
    </header>